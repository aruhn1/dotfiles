[user]
  name = Mikkel Laursen
  email = mlaursen03@gmail.com
[core]
  editor = vim
  autocrlf = input
[push]
  default = upstream
[merge]
  keepBackup = false
  tool = p4merge
[mergetool]
  prompt = false
[mergetool "p4merge"]
  cmd = /Applications/p4merge.app/Contents/Resources/launchp4merge "$BASE" "$LOCAL" "$REMOTE" "$MERGED"
  trustExitCode = false
  keepBackup = false
  keepTemporaries = false
[diff]
	tool = p4mergetool
[difftool "p4mergetool"]
  cmd = /Applications/p4merge.app/Contents/Resources/launchp4merge "\"$REMOTE\"" "\"$LOCAL\""
[alias]
  ckb = checkout -b
  lg = log --name-status --no-merges
  pb = "!sh -c \"git pull origin `git currbranch`\""
  currbranch = rev-parse --abbrev-ref HEAD
  push1 = "!sh -c \"git push --set-upstream origin `git currbranch`\""
  messages = log --pretty=\"%an %ad %h %s\" --date=short --no-merges
  commits = log --pretty='%H'
  files = "!sh -c \"git diff --name-status --no-merges $1\""
  find = "!sh -c \"git messages --name-status --all --grep='$1'\""
  finda = "!sh -c \"git find $1 --author='$2'\""
  pruneremote = "!sh -c \"git remote prune origin\""
  prune = "!sh -c \"git branch -vv | awk '/: gone]/{print $1}' | xargs git branch -d\""
[color]
  ui = auto
[credential]
  helper = store
[commit]
	template = ~/.gitmessage.txt
