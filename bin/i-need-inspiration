#!/bin/sh

size=
image=
quote=

while [[ $# -gt 0 ]]; do
  arg="$1"

  case $arg in
    -s|--size)
      shift
      size="$1"
      shift
      ;;
    --image)
      shift
      image="$1"
      shift
      ;;
    -q|--quote)
      shift
      quote="$1"
      shift
      ;;
    *)
      shift
  esac
done


if [[ -z "$size" ]]; then
  size=400
fi

if [[ -z "$image" ]]; then
  image=$(curl -s https://picsum.photos/list | python3 -c "import sys, json, random; print(random.choice(json.load(sys.stdin))['id'])")
fi

if [[ -z "$quote" ]]; then
  quote=$(fortune)
fi


curl -s "https://picsum.photos/$size?image=$image" | imgcat
cowsay -f $(ls /usr/local/Cellar/cowsay/3.04/share/cows/*.cow | gshuf -n1) "$quote"
